# Environment Variables Template
# Copy this to .env and fill in your actual values

# Database Connection Strings
DB_CONNECTION_STRING_USERS=Server=tcp:YOUR_SERVER.database.windows.net,1433;Initial Catalog=YOUR_DATABASE;User ID=YOUR_USERNAME;Password=YOUR_PASSWORD;Encrypt=True;TrustServerCertificate=False;Connection Timeout=30;
DB_CONNECTION_STRING_SETTINGS=Server=tcp:YOUR_SERVER.database.windows.net,1433;Initial Catalog=YOUR_DATABASE;User ID=YOUR_USERNAME;Password=YOUR_PASSWORD;Encrypt=True;TrustServerCertificate=False;Connection Timeout=30;

# JWT Settings (must be same for both APIs)
JWT_SECRET_KEY=GENERATE_YOUR_OWN_32_CHARACTER_SECRET_KEY_HERE
JWT_ISSUER=KFCWeb
JWT_AUDIENCE=KFCWebUsers
